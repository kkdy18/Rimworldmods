	<RecipeDef ParentName="SurgeryFlesh">
		<defName>NY_CureBlissLobotomy</defName>
		<label>修复极乐切脑</label>
		<description>为患者植入额叶并重新缝合脑神经，修复极乐切脑留下的损伤。</description>
		<workerClass>Recipe_RemoveHediff</workerClass>
		<jobString>正在修复极乐切脑。</jobString>
		<workAmount>6000</workAmount>
		<removesHediff>BlissLobotomy</removesHediff>
		<successfullyRemovedHediffMessage>{0}成功治愈了{1}的极乐切脑。</successfullyRemovedHediffMessage>
		<deathOnFailedSurgeryChance>0.5</deathOnFailedSurgeryChance>
		<skillRequirements>
			<Medicine>12</Medicine>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>NY_GhoulBrainLobe</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>4</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>NY_GhoulBrainLobe</li>
			</thingDefs>
			<categories>
				<li>Medicine</li>
			</categories>
			<disallowedThingDefs>
				<li>MedicineHerbal</li>
			</disallowedThingDefs>
		</fixedIngredientFilter>
	</RecipeDef>

