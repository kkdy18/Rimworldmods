			<EquipDelay>1.5</EquipDelay>
		</statBases>
		<equippedStatOffsets>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/NY_IronHat/NY_IronHat</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>NY_LoongCloth_Soldier</li>
			</tags>
		</apparel>
		<costList>
			<NY_RefinedIron>50</NY_RefinedIron>
