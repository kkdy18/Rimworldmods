<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="BenchBase">
		<defName>NY_TableCrafting</defName>
		<label>冶龍铸台</label>
		<description>冶龍们用于加工各种稀有材料与锻造神兵利器的工作台。\n\n禁止在铸台上吃饭！禁止用铸台加热食物！也禁止拿走铸台上的工具！</description>
		<thingClass>Building_WorkTable</thingClass>
		<graphicData>
			<texPath>Things/Building/NY_TableCrafting/NY_TableCrafting</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(3.2,1.5)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<size>(3,1)</size>
		<castEdgeShadows>true</castEdgeShadows>
		<staticSunShadowHeight>0.20</staticSunShadowHeight>
		<costList>
			<Steel>50</Steel>
			<WoodLog>50</WoodLog>
		</costList>
		<altitudeLayer>Building</altitudeLayer>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToBuild>5000</WorkToBuild>
			<MaxHitPoints>900</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>
		<designationCategory>Production</designationCategory>
		<uiOrder>12700</uiOrder>
		<passability>PassThroughOnly</passability>
		<pathCost>50</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<recipes>
		</recipes>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
			<paintable>false</paintable>
		</building>
		<comps>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>ToolCabinet</li>
				</linkableFacilities>
			</li>
		</comps>
		<researchPrerequisites>
			<li>SmeltedLoongStarting</li>
		</researchPrerequisites>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
			<li>PlaceWorker_PreventInteractionSpotOverlap</li>
		</placeWorkers>
	</ThingDef>

	<ThingDef ParentName="BenchBase">
		<defName>NY_TableFurnace</defName>
		<label>冶龍柴火灶</label>
		<description>以木柴为燃料的灶台，冶龍们坚信只有用这样的柴火灶才能做出最正宗的冶龍菜。\n\n&lt;color=#FFCC66&gt;&lt;i&gt;游荡在外的冶龍看见故乡熟悉的炊烟，或许会前往寻求一丝希望。&lt;/i&gt;&lt;/color&gt;</description>
		<thingClass>Building_WorkTable_HeatPush</thingClass>
		<drawerType>MapMeshAndRealTime</drawerType>
		<tickerType>Normal</tickerType>
		<graphicData>
			<texPath>Things/Building/NY_TableFurnace/NY_TableFurnace</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(3.5,1.2)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<size>(3,1)</size>
		<castEdgeShadows>true</castEdgeShadows>
		<staticSunShadowHeight>0.20</staticSunShadowHeight>
		<costList>
			<Steel>50</Steel>
			<WoodLog>50</WoodLog>
		</costList>
		<altitudeLayer>Building</altitudeLayer>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToBuild>5000</WorkToBuild>
			<MaxHitPoints>900</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>
		<designationCategory>Production</designationCategory>
		<uiOrder>12700</uiOrder>
		<passability>PassThroughOnly</passability>
		<pathCost>50</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<recipes>
		</recipes>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<building>
			<paintable>false</paintable>
			<isMealSource>true</isMealSource>
			<heatPerTickWhileWorking>0.2</heatPerTickWhileWorking>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
		</building>
		<comps>
			<li Class="CompProperties_Refuelable">
				<fuelConsumptionRate>10</fuelConsumptionRate>
				<fuelCapacity>50</fuelCapacity>
				<fuelFilter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</fuelFilter>
				<initialFuelPercent>0.2</initialFuelPercent>
				<showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
			</li>
			<li Class="CompProperties_HeatPusher">
				<compClass>CompHeatPusherPowered</compClass>
				<heatPushMaxTemperature>28</heatPushMaxTemperature>
				<heatPerSecond>20</heatPerSecond>
			</li>
			<li Class="SmeltedLoong.TCP_JoinPawn">
				<pawnKind>NY_LoongAlone</pawnKind>
				<quest>NY_LoongWandererJoins</quest>
				<!--<ticks>1000</ticks>-->
			</li>
			<li Class="CompProperties_FireOverlay">
				<fireSize>0.4</fireSize>
				<offset>(0,-1,0)</offset>
				<offsetNorth>(-0.3,0,-0.4)</offsetNorth>
			</li>
		</comps>
		<researchPrerequisites>
			<li>SmeltedLoongStarting</li>
		</researchPrerequisites>
		<placeWorkers>
			<!--<li>PlaceWorker_ShowFacilitiesConnections</li>-->
			<li>PlaceWorker_PreventInteractionSpotOverlap</li>
		</placeWorkers>
	</ThingDef>

