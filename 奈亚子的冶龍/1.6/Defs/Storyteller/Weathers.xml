<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<WeatherDef>
		<defName>NY_DroughtClear</defName>
		<label>晴燥天</label>
		<isBad>true</isBad>
		<description>高温、干燥的天气，让人精神不振。</description>
		<accuracyMultiplier>0.8</accuracyMultiplier>
		<moveSpeedMultiplier>0.8</moveSpeedMultiplier>
		<weatherThought>NY_thougth_Drought</weatherThought>
		<favorability>Bad</favorability>
		<perceivePriority>2</perceivePriority>
		<temperatureRange>0~0</temperatureRange>
		<ambientSounds>
			<li>Ambient_Wind_Clear</li>
		</ambientSounds>
		<skyColorsDay>
			<sky>(0.95,0.82,0.65)</sky>
			<!-- 褪色沙黄色，强烈日照 -->
			<shadow>(0.88,0.78,0.68)</shadow>
			<!-- 干燥土地投影 -->
			<overlay>(0.85,0.70,0.55)</overlay>
			<!-- 沙尘覆盖效果 -->
			<saturation>0.75</saturation>
			<!-- 降低饱和度表现褪色 -->
		</skyColorsDay>
		<skyColorsDusk>
			<sky>(1.00,0.55,0.35)</sky>
			<!-- 灼烧橙红色 -->
			<shadow>(0.90,0.65,0.50)</shadow>
			<!-- 长阴影加强炎热感 -->
			<overlay>(0.75,0.50,0.40)</overlay>
			<!-- 悬浮沙尘效果 -->
			<saturation>0.85</saturation>
			<!-- 增强黄昏对比 -->
		</skyColorsDusk>
		<skyColorsNightEdge>
			<sky>(0.35,0.40,0.45)</sky>
			<shadow>(0.92,0.92,0.92)</shadow>
			<overlay>(0.5,0.5,0.5)</overlay>
			<saturation>0.9</saturation>
		</skyColorsNightEdge>
		<skyColorsNightMid>
			<sky>(0.35,0.40,0.45)</sky>
			<shadow>(0.92,0.92,0.92)</shadow>
			<overlay>(0.5,0.5,0.5)</overlay>
			<saturation>0.9</saturation>
		</skyColorsNightMid>
	</WeatherDef>

	<WeatherDef>
		<defName>NY_Sandstorm</defName>
		<label>沙暴天</label>
		<isBad>false</isBad>
		<description>裹挟着尘沙的风暴使能见度降低，任何生物在这种天气下行动都会感到困难。</description>
		<windSpeedFactor>1.5</windSpeedFactor>
		<windSpeedOffset>1.25</windSpeedOffset>
		<accuracyMultiplier>0.25</accuracyMultiplier>
		<moveSpeedMultiplier>0.25</moveSpeedMultiplier>
		<weatherThought>NY_thougth_Sandstorm</weatherThought>
		<favorability>VeryBad</favorability>
		<perceivePriority>1</perceivePriority>
		<temperatureRange>0~0</temperatureRange>
		<ambientSounds>
			<li>Ambient_Wind_Storm</li>
		</ambientSounds>
		<overlayClasses>
			<li>WeatherOverlay_SandHard</li>
		</overlayClasses>
		<skyColorsDay>
			<sky>(0.7, 0.6, 0.4)</sky>
			<!-- 浑浊的黄褐色 -->
			<shadow>(0.8, 0.7, 0.5)</shadow>
			<!-- 稍亮的沙尘阴影 -->
			<overlay>(0.6, 0.5, 0.3)</overlay>
			<!-- 深褐色覆盖层 -->
			<saturation>0.7</saturation>
			<!-- 降低饱和度，增强浑浊感 -->
		</skyColorsDay>
		<skyColorsDusk>
			<sky>(0.65, 0.5, 0.35)</sky>
			<!-- 深橙黄色 -->
			<shadow>(0.75, 0.6, 0.45)</shadow>
			<overlay>(0.55, 0.4, 0.25)</overlay>
			<saturation>0.6</saturation>
			<!-- 进一步降低饱和度 -->
		</skyColorsDusk>
		<skyColorsNightEdge>
			<sky>(0.35,0.40,0.45)</sky>
			<shadow>(0.92,0.92,0.92)</shadow>
			<overlay>(0.5, 0.5, 0.5)</overlay>
			<saturation>0.5</saturation>
		</skyColorsNightEdge>
		<skyColorsNightMid>
			<sky>(0.35,0.40,0.45)</sky>
			<shadow>(0.92,0.92,0.92)</shadow>
			<overlay>(0.5, 0.5, 0.5)</overlay>
			<saturation>0.5</saturation>
		</skyColorsNightMid>
	</WeatherDef>

