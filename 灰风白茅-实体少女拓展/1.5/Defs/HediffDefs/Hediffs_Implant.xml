<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef Name="MNS_MechanitorImplantBase" ParentName="MechanitorImplantCraftableBase" Abstract="True">
		<graphicData>
			<color>(100, 80, 80)</color>
		</graphicData>
		<recipeMaker Inherit="false">
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Smith</soundWorking>
			<unfinishedThingDef>UnfinishedHealthItemGhoul</unfinishedThingDef>
			<recipeUsers>
				<li>BioferriteShaper</li>
			</recipeUsers>
			<displayPriority>650</displayPriority>
		</recipeMaker>
	</ThingDef>

	<ThingDef ParentName="MNS_MechanitorImplantBase">
		<defName>MNS_ShardNode</defName>
		<label>shard node</label>
		<description>An implant which increases a mechanitor's bandwidth and the psychic sensitivity by transforming shards into backup nodes. However, excessive linking of shards will increase the workload on the mechanitor's brain and may impair the cognitive ability.\n\nIt can be self-installed without surgery.\n\nThis implant can be installed up to 9 times to increase its effect.</description>
		<descriptionHyperlinks>
			<HediffDef>MNS_ShardNodeImplant</HediffDef>
		</descriptionHyperlinks>
		<statBases>
			<MaxInstallCount>9</MaxInstallCount>
		</statBases>
		<costList>
			<SignalChip>1</SignalChip>
			<Bioferrite>10</Bioferrite>
			<Shard>1</Shard>
		</costList>
		<recipeMaker>
			<researchPrerequisite>HighMechtech</researchPrerequisite>
		</recipeMaker>
		<comps>
			<li Class="CompProperties_Usable">
				<compClass>CompUsableImplant</compClass>
				<useJob>UseItem</useJob>
				<useLabel>Implant shard node</useLabel>
				<userMustHaveHediff>MechlinkImplant</userMustHaveHediff>
			</li>
			<li Class="CompProperties_UseEffectInstallImplant">
				<hediffDef>MNS_ShardNodeImplant</hediffDef>
				<bodyPart>Brain</bodyPart>
				<canUpgrade>true</canUpgrade>
				<maxSeverity>9</maxSeverity>
			</li>
		</comps>
	</ThingDef>

	<HediffDef ParentName="MNS_HediffBase">
